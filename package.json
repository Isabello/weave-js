{
  "name": "weave",
  "version": "0.0.1",
  "description": "Client library to talk to weave-based blockchain apps",
  "author": "Ethan Frey <ethanfrey@users.noreply.github.com>",
  "license": "Apache-2.0",
  "keywords": [
    "confio",
    "blockchain",
    "lightclient"
  ],
  "main": "index.js",
  "scripts": {
    "test": "jest",
    "tdd": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/.bin/jest --runInBand --watch",
    "start": "webpack-dev-server --config webpack/demo.js",
    "build": "webpack --config webpack/build.js --output-filename=zliq.js --output-path=lib/",
    "build:min": "webpack -p --config webpack/build_min.js --output-filename=zliq.min.js --output-path=lib/",
    "build:all": "npm run build && npm run build:min",
    "build:lib": "npm run build && npm run build:min",
    "prepublishOnly": "npm test && rimraf lib/** && npm run build:lib"
  },
  "dependencies": {
    "deep-equal": "^1.0.1",
    "js-nacl": "^1.2.2",
    "protobufjs": "^6.8.6",
    "stacktrace-js": "^2.0.0",
    "tendermint": "^2.0.5"
  },
  "devDependencies": {
    "babel-core": "^6.23.1",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^20.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-h-jsx": "^1.0.0",
    "babel-preset-babili": "0.0.12",
    "babel-preset-es2015": "^6.22.0",
    "babel-register": "^6.24.0",
    "css-loader": "^0.26.1",
    "eslint": "^4.18.2",
    "jest": "^20.0.4",
    "node-sass": "^4.5.0",
    "null-loader": "^0.1.1",
    "rimraf": "^2.6.1",
    "sass-loader": "^5.0.1",
    "style-loader": "^0.13.1",
    "webpack": "2.6.1",
    "webpack-dev-server": "2.5.0",
    "webpack-node-externals": "^1.5.4",
    "worker-loader": "^0.8.0"
  },
  "browser": {
    "ed25519-supercop": "supercop.js"
  },
  "repository": {
    "url": "git+https://github.com/confio/weave-js.git",
    "type": "git"
  },
  "bugs": {
    "url": "https://github.com/confio/weave-js/issues"
  },
  "homepage": "https://github.com/confio/weave-js#readme",
  "jest": {
    "setupFiles": [],
    "moduleNameMapper": {
      "\\.(css|scss|jpg|png)$": "<rootDir>/test/helpers/empty-module.js"
    },
    "collectCoverage": true,
    "coverageDirectory": "./",
    "coverageReporters": [
      "lcov"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/",
      "/lib/"
    ],
    "testURL": "http://localhost"
  }
}
